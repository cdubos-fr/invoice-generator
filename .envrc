#!/usr/bin/env bash

# direnv bootstrap for generated project (no Nix)

watch_file pyproject.toml
watch_file tox.ini
watch_file Justfile

if [[ ! -d .venv ]]; then
	echo "[direnv] creating .venv"
	python -m venv .venv
fi

# shellcheck disable=SC1091
source .venv/bin/activate

export PIP_DISABLE_PIP_VERSION_CHECK=1
export PYTHONDONTWRITEBYTECODE=1

# Optionally auto-sync dependencies (uncomment if desired)
# if command -v tox >/dev/null 2>&1; then
#   echo "[direnv] syncing dependency groups via tox (devenv)"
#   tox -q -e devenv || true
# fi

echo "[direnv] Environment ready (.venv). Use 'just devenv' to (re)install all groups or 'tox -e tests'."
