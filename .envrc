#!/usr/bin/env bash

# direnv bootstrap for generated project (no Nix, uses uv for deps)

watch_file pyproject.toml
watch_file tox.ini
watch_file Justfile

echo "[direnv] preparing dev env with tox-uv (just devenv)"
just devenv || true

# shellcheck disable=SC1091
source .venv/bin/activate

export PIP_DISABLE_PIP_VERSION_CHECK=1
export PYTHONDONTWRITEBYTECODE=1
